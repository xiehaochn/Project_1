<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp">
                <TextView
                    style="@style/FriendProfileText"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/name"
                    style="@style/FriendProfileText"
                    android:text="111111"
                    />
                <TextView
                    style="@style/FriendProfileText"
                    android:text="Phone:"
                    />
                <TextView
                    android:id="@+id/phone"
                    style="@style/FriendProfileText"
                    android:text="1111111"
                    />
                <TextView
                    style="@style/FriendProfileText"
                    android:text="Nickname1:"
                    />
                <TextView
                    android:id="@+id/nickname1"
                    style="@style/FriendProfileText"
                    android:text="1111111"
                    />
                <TextView
                    style="@style/FriendProfileText"
                    android:text="Nickname2:"
                    />
                <TextView
                    android:id="@+id/nickname2"
                    style="@style/FriendProfileText"
                    android:text="1111111"
                    />
            </GridLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Integration:"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/integration"
                    android:text="11111"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/payrecord"
                android:text="Pay Record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/communicationrecord"
                android:text="Communication Record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/inviterecord"
                android:text="Invite Record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>